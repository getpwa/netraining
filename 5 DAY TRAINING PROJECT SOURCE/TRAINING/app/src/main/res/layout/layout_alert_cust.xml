            android:textColor="#409fe8"
            android:textSize="18dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="gfshdgfg"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnok"
